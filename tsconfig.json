{

    "compilerOptions": {

    "target": "es5",                          
    "module": "ES6",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,             
    "noImplicitAny": true,
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,                           
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  

},
"include": [
    "index.tsx", 
    "./src/**/*"
],

"exclude": ["node_modules"]
}
